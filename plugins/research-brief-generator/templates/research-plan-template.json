  "decision_framework": {
    "method": "weighted-scoring",
    "description": "Weighted decision matrix with must-have elimination followed by scoring",
    "steps": [
      "1. Eliminate alternatives that fail must-have requirements",
      "2. Score remaining alternatives on all criteria (1-5 scale)",
      "3. Calculate weighted scores (score × criterion weight)",
      "4. Sum weighted scores for total score per alternative",
      "5. Rank alternatives by total score",
      "6. Perform sensitivity analysis on weights",
      "7. Generate recommendation with rationale"
    ],
    "passing_threshold": "Minimum weighted score of 3.0/5.0 to be considered viable",
    "tiebreakers": [
      "If scores within 0.2 points: prefer lower TCO",
      "If still tied: prefer better user reviews",
      "If still tied: prefer established vendor"
    ],
    "sensitivity_analysis": "Test recommendation robustness by varying weights ±10%",
    "final_output": "Ranked list with recommendation and detailed justification"
  },

